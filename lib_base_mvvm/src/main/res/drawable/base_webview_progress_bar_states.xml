<?xml version="1.0" encoding="utf-8"?>
<!-- 层叠 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/base_colorTransform"
                android:endColor="@color/base_colorTransform"
                android:startColor="@color/base_colorTransform" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dp" />

                <gradient
                    android:centerColor="#0287d4"
                    android:endColor="@color/base_colorPrimaryDark"
                    android:startColor="#7ea2f7" />
            </shape>
        </clip>
    </item>

</layer-list>
