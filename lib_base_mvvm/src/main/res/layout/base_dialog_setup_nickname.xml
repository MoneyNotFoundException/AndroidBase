<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dip_35"
        android:layout_marginLeft="@dimen/base_dip_30"
        android:layout_marginTop="@dimen/base_dip_15"
        android:layout_marginRight="@dimen/base_dip_30"
        android:background="@drawable/base_setup_nickname_bg_shape"
        android:gravity="center"
        android:hint=""
        android:maxLength="5"
        android:singleLine="true"
        android:textColor="@color/base_colorText34"
        android:textSize="@dimen/sp_14"/>
</LinearLayout>
