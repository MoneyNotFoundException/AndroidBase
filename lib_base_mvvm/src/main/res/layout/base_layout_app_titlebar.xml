<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <!--<data>-->

    <!--<variable-->
    <!--name="titleBarViewModel"-->
    <!--type="cn.lianshi.library.mvvmbase.base.TitleBarViewModel"/>-->
    <!--</data>-->

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/base_040406">

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#151c21" />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dip_15"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/base_dip_10"
                android:layout_height="@dimen/base_dip_18" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_finish"
            android:layout_width="@dimen/base_dip_25"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_back"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:textColor="@color/base_colorWhite"
            android:textSize="17sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/base_dip_10"
            android:layout_marginLeft="@dimen/base_dip_10"
            android:layout_toEndOf="@+id/tv_finish"
            android:layout_toRightOf="@+id/tv_finish"
            android:textColor="#5bc783"
            android:textSize="@dimen/base_sp_18" />

        <TextView
            android:id="@+id/tv_titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="@color/base_colorWhite"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dip_12"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/base_dip_20"
                android:layout_height="@dimen/base_dip_4"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dip_12"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/base_dip_20"
                android:layout_height="17dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dip_12"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="@dimen/base_dip_20"
                android:layout_height="17dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center" />

        </LinearLayout>

    </RelativeLayout>

</layout>
