<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_float_transparent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/base_dip_15"
            android:layout_marginRight="@dimen/base_dip_15"
            android:layout_height="@dimen/base_dip_90"
            android:gravity="center_horizontal"
            android:background="@color/base_09090F"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="@dimen/base_dip_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_696b75"
                android:text="ssss"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dip_40"
                android:gravity="center"
                android:textColor="@color/base_90FF00"
                android:textSize="@dimen/base_sp_13"
                android:text="ssssssss"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/base_dip_15"
            android:layout_marginLeft="@dimen/base_dip_15"
            android:layout_height="@dimen/base_dip_50"
            android:layout_marginTop="@dimen/base_dip_10"
            android:background="@color/base_09090F"
            android:textColor="@color/base_A0a3aD"
            android:textSize="@dimen/base_sp_13"
            android:gravity="center"
            android:text="dsdsdsd"/>

    </LinearLayout>
</layout>
